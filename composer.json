{
    "name": "ddegner/avif-local-support",
    "description": "Unified AVIF support and conversion for WordPress.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "David Degner",
            "homepage": "https://www.DavidDegner.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "symfony/process": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "Ddegner\\AvifLocalSupport\\": "includes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
